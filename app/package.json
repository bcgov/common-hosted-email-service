{
  "name": "common-hosted-email-service",
  "version": "1.0.0",
  "private": true,
  "description": "CHES - Powered by NodeMailer (a shared library)",
  "author": "NR Common Service Showcase <NR.CommonServiceShowcase@gov.bc.ca>",
  "scripts": {
    "build": "echo Nothing to build",
    "serve": "nodemon ./bin/www",
    "start": "node ./bin/www",
    "lint": "eslint . --no-fix --ignore-pattern 'node_modules' --ext .js",
    "lint:fix": "eslint . --fix --ignore-pattern 'node_modules' --ext .js",
    "test": "npm run test:unit",
    "test:all": "jest --verbose",
    "test:integration": "jest --verbose --testPathIgnorePatterns unit --collectCoverage false",
    "test:unit": "jest --verbose --testPathIgnorePatterns integration --forceExit --detectOpenHandles --maxWorkers=10",
    "test:api": "newman run ./src/docs/AUTO.postman_collection.json -e ./src/docs/DEV.postman_environment.json",
    "clean": "rm -rf coverage dist",
    "pretest": "npm run lint",
    "posttest": "node ./lcov-fix.js",
    "purge": "rm -rf ./node_modules",
    "rebuild": "npm run clean && npm run build",
    "reinstall": "npm run purge && npm install",
    "migrate": "npm run migrate:latest",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:up": "knex migrate:up",
    "migrate:down": "knex migrate:down"
  },
  "homepage": "https://github.com/bcgov/common-hosted-email-service",
  "dependencies": {
    "api-problem": "^6.1.4",
    "atob": "^2.1.2",
    "bull": "^3.16.0",
    "bytes": "^3.1.0",
    "compression": "^1.7.4",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "keycloak-connect": "^11.0.0",
    "knex": "^0.21.2",
    "moment": "^2.27.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.11",
    "npmlog": "^4.1.2",
    "nunjucks": "^3.2.2",
    "objection": "^2.2.2",
    "pg": "^8.3.0",
    "tmp": "^0.2.1",
    "uuid": "^8.3.0",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "eslint": "^7.6.0",
    "jest": "^26.2.2",
    "jest-sonar-reporter": "^2.0.0",
    "newman": "^5.1.2",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "_": false
    },
    "parserOptions": {
      "ecmaVersion": 9
    },
    "rules": {
      "eol-last": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/tests/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/docs/*.*",
      "!src/middleware/*.*",
      "!src/services/*.*",
      "!src/services/migrations/*.*",
      "!src/services/models/*.*"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "coverage"
  },
  "license": "Apache-2.0",
  "nodemonConfig": {
    "ignore": [
      "node_modules/**/node_modules",
      "test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/common-hosted-email-service.git"
  },
  "bugs": {
    "url": "https://github.com/bcgov/common-hosted-email-service/issues"
  }
}
